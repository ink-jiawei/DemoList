<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <View style="@style/divider_line_height2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <!--实名提示-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y25"
            android:background="@color/background_color"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x8"
            android:text="@string/user_presonal_identity_verify_hint"
            android:textColor="@color/appThemeColor"
            android:textSize="@dimen/x13" />

        <!--手机号码-->
        <RelativeLayout
            android:id="@+id/user_presonal_identity_verify_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/y9"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16"
            android:paddingTop="@dimen/y9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/user_presonal_identity_verify_phone"
                android:textColor="@color/text_color_normal_title"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/user_presonal_identity_verify_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color_small_title"
                android:textSize="@dimen/x13" />
        </RelativeLayout>

        <View
            style="@style/divider_line_height2"
            android:layout_marginLeft="@dimen/x13" />

        <!--真实姓名-->
        <RelativeLayout
            android:id="@+id/user_presonal_identity_verify_truename_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/y9"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16"
            android:paddingTop="@dimen/y9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/user_presonal_identity_verify_truename"
                android:textColor="@color/text_color_normal_title"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/user_presonal_identity_verify_truename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color_small_title"
                android:textSize="@dimen/x13" />
        </RelativeLayout>

        <View
            style="@style/divider_line_height2"
            android:layout_marginLeft="@dimen/x13" />

        <!--身份证号-->
        <RelativeLayout
            android:id="@+id/user_presonal_identity_verify_idcard_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/y9"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16"
            android:paddingTop="@dimen/y9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/user_presonal_identity_verify_idcard"
                android:textColor="@color/text_color_normal_title"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/user_presonal_identity_verify_idcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color_small_title"
                android:textSize="@dimen/x13" />
        </RelativeLayout>

        <View
            style="@style/divider_line_height2"
            android:layout_marginLeft="@dimen/x13" />

        <!--手持身份证照片-->
        <RelativeLayout
            android:id="@+id/user_presonal_identity_verify_handle_idcard_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/y9"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16"
            android:paddingTop="@dimen/y9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/user_presonal_identity_verify_handle_idcard"
                android:textColor="@color/text_color_normal_title"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/user_presonal_identity_verify_handle_idcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/appThemeColor"
                android:textSize="@dimen/x13" />
        </RelativeLayout>

        <View style="@style/divider_line_height2" />
    </LinearLayout>
</LinearLayout>