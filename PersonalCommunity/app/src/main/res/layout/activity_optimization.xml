<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <!--toolbar-->
    <FrameLayout
        android:id="@+id/toolbar_statusbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y27"
            android:background="@color/background_color">
            <!--左边-->
            <LinearLayout
                android:id="@+id/toolbar_left_layout"
                android:layout_width="@dimen/y27"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/default_click_selector"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/toolbar_left_image"
                    android:layout_width="@dimen/y14"
                    android:layout_height="@dimen/y14"
                    android:scaleType="centerInside"
                    android:src="@drawable/toolbar_back_black" />

            </LinearLayout>
            <!--中间-->
            <LinearLayout
                android:id="@+id/toolbar_center_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toolbar_center_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x35"
                    android:layout_marginRight="@dimen/x35"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/indiana_type_look_youxuan"
                    android:textColor="@color/text_color_normal_title"
                    android:textSize="@dimen/x16" />

            </LinearLayout>

            <!--右边-->
            <RelativeLayout
                android:id="@+id/toolbar_right_layout"
                android:layout_width="@dimen/y27"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/default_click_selector">

                <ImageView
                    android:id="@+id/toolbar_right_image"
                    android:layout_width="@dimen/y14"
                    android:layout_height="@dimen/y14"
                    android:layout_centerInParent="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/main_tab_list" />

                <TextView
                    android:id="@+id/toolbar_right_text"
                    android:layout_width="@dimen/x13"
                    android:layout_height="@dimen/x13"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x8"
                    android:layout_marginTop="@dimen/x4"
                    android:background="@drawable/list_car_num_red_bg"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x10" />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

    <View style="@style/divider_line_height2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y27"
            android:background="@color/background_color"
            android:paddingLeft="@dimen/x8"
            android:paddingRight="@dimen/x8">

            <TextView
                android:id="@+id/indiana_search_shop_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color_normal_title"
                android:textSize="@dimen/x12" />

            <TextView
                android:id="@+id/indiana_search_addlist_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/indiana_search_add_all"
                android:textColor="@color/appThemeColor"
                android:textSize="@dimen/x12" />

        </RelativeLayout>

        <View style="@style/divider_line_height2" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
