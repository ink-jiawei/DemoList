<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/view_background_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <!--姓名、电话-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x13">

            <TextView
                android:id="@+id/address_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color_normal_title"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/address_list_item_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color_normal_title"
                android:textSize="@dimen/x13" />
        </RelativeLayout>

        <!--地址-->
        <TextView
            android:id="@+id/address_list_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x13"
            android:textColor="@color/text_color_normal_title"
            android:textSize="@dimen/x13" />

        <View style="@style/divider_line_height2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/y6"
            android:paddingLeft="@dimen/x13"
            android:paddingRight="@dimen/x13"
            android:paddingTop="@dimen/y6">

            <!--设为默认地址-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/address_list_item_set_default"
                    android:layout_width="@dimen/y13"
                    android:layout_height="@dimen/y13"
                    android:src="@drawable/checked_address_selector" />

                <TextView
                    android:id="@+id/address_list_item_is_set_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:text="@string/user_presonal_address_edt_set_default"
                    android:textSize="@dimen/x13" />
            </LinearLayout>

            <!--编辑、删除-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!--编辑-->
                <LinearLayout
                    android:id="@+id/address_list_item_edt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/y13"
                        android:layout_height="@dimen/y13"
                        android:src="@drawable/address_edt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x4"
                        android:text="@string/edt"
                        android:textColor="@color/text_color_normal_title"
                        android:textSize="@dimen/x13" />
                </LinearLayout>

                <!--删除-->
                <LinearLayout
                    android:id="@+id/address_list_item_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/y13"
                        android:layout_height="@dimen/y13"
                        android:src="@drawable/address_del" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x4"
                        android:text="@string/delete"
                        android:textColor="@color/text_color_normal_title"
                        android:textSize="@dimen/x13" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
