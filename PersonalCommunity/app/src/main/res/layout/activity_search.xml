<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <!--toolbar-->
    <FrameLayout
        android:id="@+id/toolbar_statusbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appThemeColor">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y27"
            android:background="@color/appThemeColor"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/x13">
            <!--左边-->
            <LinearLayout
                android:id="@+id/toolbar_left_layout"
                android:layout_width="@dimen/y27"
                android:layout_height="match_parent"
                android:background="@drawable/default_click_selector"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/toolbar_left_image"
                    android:layout_width="@dimen/y14"
                    android:layout_height="@dimen/y14"
                    android:scaleType="centerInside"
                    android:src="@drawable/toolbar_back_white" />

            </LinearLayout>
            <!--中间-->
            <LinearLayout
                android:id="@+id/toolbar_center_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/toolbar_center_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y16"
                    android:background="@drawable/search_edt_bg"
                    android:hint="@string/indiana_search_hint"
                    android:paddingLeft="@dimen/x13"
                    android:paddingRight="@dimen/x13"
                    android:textColor="@color/text_color_normal_title"
                    android:textSize="@dimen/x12" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <!--热门搜索-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/y18"
            android:paddingLeft="@dimen/x13"
            android:paddingRight="@dimen/x13"
            android:paddingTop="@dimen/y18">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/indiana_search_hot"
                android:textColor="@color/text_color_hint"
                android:textSize="@dimen/x12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/x11"
                android:background="@drawable/search_labe_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x9"
                android:paddingRight="@dimen/x9"
                android:paddingTop="@dimen/x2"
                android:text="iphone"
                android:textColor="@color/text_color_normal_title"
                android:textSize="@dimen/x12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/x11"
                android:background="@drawable/search_labe_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x9"
                android:paddingRight="@dimen/x9"
                android:paddingTop="@dimen/x2"
                android:text="iPad"
                android:textColor="@color/text_color_normal_title"
                android:textSize="@dimen/x12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/x11"
                android:background="@drawable/search_labe_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x9"
                android:paddingRight="@dimen/x9"
                android:paddingTop="@dimen/x2"
                android:text="汽车"
                android:textColor="@color/text_color_normal_title"
                android:textSize="@dimen/x12" />

        </LinearLayout>

        <!--历史搜索-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x13">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/indiana_search_histroy"
                    android:textColor="@color/text_color_hint"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/indiana_search_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x13"
                    android:text="@string/indiana_search_clear"
                    android:textColor="@color/announced_progress_text_color"
                    android:textSize="@dimen/x12" />
            </RelativeLayout>

            <View style="@style/divider_line_height2" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
