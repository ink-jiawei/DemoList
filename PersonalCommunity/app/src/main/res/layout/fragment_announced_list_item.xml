<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/x8">

    <ImageView
        android:id="@+id/announced_item_shop_image"
        android:layout_width="@dimen/y62"
        android:layout_height="@dimen/y62"
        android:layout_gravity="center"
        android:layout_margin="@dimen/x10"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/announced_item_shop_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_normal_title"
        android:textSize="@dimen/x12" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y3"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/announced_qihao"
            android:textColor="@color/text_color_hint"
            android:textSize="@dimen/x10" />

        <TextView
            android:id="@+id/announced_item_shop_qihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_small_title"
            android:textSize="@dimen/x10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y3"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/y13"
            android:layout_height="@dimen/y13"
            android:scaleType="centerCrop"
            android:src="@drawable/announced_will_announced" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/announced_will_announced"
            android:textColor="@color/appThemeColor"
            android:textSize="@dimen/x12" />
    </LinearLayout>

    <com.inkhjw.personalcommunity.widget.TimeCountDownView
        android:id="@+id/announced_item_shop_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:textColor="@color/appThemeColor"
        android:textSize="@dimen/x26" />
</LinearLayout>
