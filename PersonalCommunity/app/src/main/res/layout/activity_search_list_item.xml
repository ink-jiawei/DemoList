<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/y6"
    android:paddingRight="@dimen/x8">

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/indiana_search_shop_image"
            android:layout_width="@dimen/y43"
            android:layout_height="@dimen/y43"
            android:layout_margin="@dimen/x8"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/indiana_search_shop_image_type"
            android:layout_width="@dimen/y18"
            android:layout_height="@dimen/y18"
            android:scaleType="centerCrop" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/framelayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/indiana_search_shop_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_normal_title"
            android:textSize="@dimen/x12" />

        <ProgressBar
            android:id="@+id/indiana_search_shop_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="@dimen/x133"
            android:layout_height="@dimen/y3"
            android:layout_marginBottom="@dimen/y3"
            android:layout_marginTop="@dimen/y7"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/indiana_progress_style" />

        <RelativeLayout
            android:layout_width="@dimen/x133"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/indiana_search_shop_all_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color_hint"
                android:textSize="@dimen/x10" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/indiana_search_next_need"
                    android:textColor="@color/text_color_hint"
                    android:textSize="@dimen/x10" />

                <TextView
                    android:id="@+id/indiana_search_shop_next_need"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/announced_progress_text_color"
                    android:textSize="@dimen/x10" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/indiana_search_addlist"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/y15"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/add_to_list_btn"
        android:text="@string/indiana_search_add"
        android:textColor="@color/appThemeColor"
        android:textSize="@dimen/x8" />

</RelativeLayout>
